начало :-
    write('Введите список в формате [элемент1,элемент2,...]: '),
    read(Список),  % Чтение ввода пользователя
    (упорядочен(Список) ->
        write('Список упорядочен по возрастанию');
        write('Список НЕ упорядочен по возрастанию').

% Предикаты проверки упорядоченности
упорядочен([]).
упорядочен([_]).
упорядочен([X,Y|Хвост]) :-
    X =< Y,
    упорядочен([Y|Хвост]).
